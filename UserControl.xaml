<UserControl x:Class="OpenGE.ProjectManagerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <TextBlock Text="Projects" FontSize="18" FontWeight="Bold" Margin="10"/>
            <ListBox Name="ProjectList" Margin="10" Height="300"/>
            <Button Content="New Project" Margin="10" Click="NewProject_Click"/>
            <Button Content="Open Project" Margin="10" Click="OpenProject_Click"/>
            <Button Content="Delete Project" Margin="10" Click="DeleteProject_Click"/>
        </StackPanel>
    </Grid>
</UserControl>